    <div class="table-responsive">

        <table class="table table-bordered">
        <h3 class="text-center"><bold>{{studentname}}</bold></h3>
        <thead> 
            
            <tr class="text-center">
                <th colspan=""></th>
                {{#yearlabels}}
                {{#years}}
                  <th colspan="2">{{year}} </th>               
                {{/years}}
                {{/yearlabels}}
            </tr>
    
        </thead>
        <tbody>
           
            <tr>
                {{#reports}}
                {{#repos}}
                    <td>{{report}}</td>
                {{/repos}}
                {{/reports}}
            </tr>
            
            {{#learningareas}}
            {{#areas}}
            <tr>
                <td>{{area}}</td>
                {{#dummyrows}}
                    <td>{{dummyvalue}}</td>
                {{/dummyrows}}
              
            </tr>

            {{#assesmentdetails}}
            {{#assesmentdets}}
                <tr>
                    <td>{{assessment}}</td>
                    {{#grades}}
                        <td>{{grade}}</td>
                    {{/grades}}
                </tr>
             {{/assesmentdets}}
            {{/assesmentdetails}}
            
            {{/areas}}
            {{/learningareas}}
            
        
           
       
        </tbody>
    </table>
    </div>